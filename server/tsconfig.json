{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es2022",
    "lib": ["ES2023"],
    "module": "Node16",
    "baseUrl": "./",
    "paths": {
      "@application/*": ["./src/application/*"],
      "@core/*": ["./src/core/*"],
      "@infra/*": ["./src/infra/*"],
      "@utils/*": ["./src/utils/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"]
}
